{
  "name": "edge-developer-extension",
  "displayName": "Edge Developer Extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "resources/logo.svg",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "edge-devices",
          "title": "Edge Devices",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "views": {
      "edge-devices": [
        {
          "id": "edgeDevices",
          "name": "Devices"
        },
        {
          "id": "edgeDocumentation",
          "name": "Documentation"
        }
      ]
    },
    "commands": [
      {
        "command": "edge-developer-extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "edge-developer-extension.refreshDevices",
        "title": "Refresh Devices",
        "icon": "$(refresh)"
      },
      {
        "command": "edge-developer-extension.addDevice",
        "title": "Add Device",
        "icon": "$(add)"
      },
      {
        "command": "edge-developer-extension.runApp",
        "title": "Run App",
        "icon": "$(debug-start)"
      },
      {
        "command": "edge-developer-extension.stopApp",
        "title": "Stop App",
        "icon": "$(debug-stop)"
      },
      {
        "command": "edge-developer-extension.debugApp",
        "title": "Debug App",
        "icon": "$(callstack-view-icon)"
      },
      {
        "command": "edge-developer-extension.attachDebugger",
        "title": "Attach Debugger",
        "icon": "$(callstack-view-session)"
      },
      {
        "command": "edge-developer-extension.openDocumentation",
        "title": "Open Documentation"
      },
      {
        "command": "edge-developer-extension.openDeviceDetails",
        "title": "Open Device Details"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "edge-developer-extension.refreshDevices",
          "when": "view == edgeDevices",
          "group": "navigation"
        },
        {
          "command": "edge-developer-extension.addDevice",
          "when": "view == edgeDevices",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "edge-developer-extension.runApp",
          "when": "view == edgeDevices && viewItem == device",
          "group": "inline"
        },
        {
          "command": "edge-developer-extension.stopApp",
          "when": "view == edgeDevices && viewItem == device",
          "group": "inline"
        },
        {
          "command": "edge-developer-extension.debugApp",
          "when": "view == edgeDevices && viewItem == device",
          "group": "inline"
        },
        {
          "command": "edge-developer-extension.attachDebugger",
          "when": "view == edgeDevices && viewItem == device",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "esbuild": "^0.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
